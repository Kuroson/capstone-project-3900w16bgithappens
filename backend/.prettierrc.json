{
    "printWidth": 100,
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto",
    "singleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "useTabs": false,
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "@/exceptions(/)?(.*)$",
        "@/models(/)?(.*)$",
        "@/utils(/)?(.*)$",
        "@/middlewares(/)?(.*)$",
        "@/routes(/)?(.*)$",
        "^util(/)?(.*)$",
        "^data(/)?(.*)$",
        "^styles(/)?(.*)$",
        "./avatars(/)?(.*)$",
        "./admin(/)?(.*)$",
        "./user(/)?(.*)$",
        "./course(/)?(.*)$",
        "./page(/)?(.*)$",
        "./file(/)?(.*)$",
        "./quiz(/)?(.*)$",
        "./assignment(/)?(.*)$",
        "./workload(/)?(.*)$",
        "./analytics(/)?(.*)$",
        "./class(/)?(.*)$",
        "./forum(/)?(.*)$",
        "^[./]"
    ],
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
